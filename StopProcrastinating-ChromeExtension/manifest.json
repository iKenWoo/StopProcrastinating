{
  "manifest_version": 2,

  "name": "Stop Procrastinating!",
  "description": "This extension is the answer to help you from procrastinating",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
    //,"persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Stop procrastinating!"
  },
  "web_accessible_resources": ["blocked.html"],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
